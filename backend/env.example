# Environment Configuration for Translation Platform Backend

# Environment
NODE_ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=4000
API_GATEWAY_PORT=4000
WEBSOCKET_PORT=4001
DOCUMENT_SERVICE_PORT=8000
FILE_PROCESSING_PORT=8001
COLLABORATION_PORT=8002
NOTIFICATION_PORT=8003
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=translation_platform_dev
DB_USER=postgres
DB_PASSWORD=password

# Test Database
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=translation_platform_test
TEST_DB_USER=postgres
TEST_DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,docx,txt,doc,rtf

# External Services (Placeholder - not integrating Baidu for now)
# BAIDU_ACCESS_KEY=your_baidu_access_key
# BAIDU_SECRET_KEY=your_baidu_secret_key
# BAIDU_AI_API_KEY=your_baidu_ai_api_key
# BAIDU_AI_SECRET_KEY=your_baidu_ai_secret_key
# BAIDU_BOS_ENDPOINT=your_bos_endpoint
# BAIDU_BMQ_ENDPOINT=your_bmq_endpoint
# BOS_BUCKET=your_bos_bucket

# Google Cloud Configuration (for document processing)
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-storage-bucket-name

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Health Check
HEALTH_CHECK_INTERVAL=30s

# Development Tools (only used in development profile)
PGADMIN_EMAIL=admin@translation-platform.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

REDIS_COMMANDER_PORT=8081

MAILHOG_PORT=1025
MAILHOG_WEB_PORT=8025

# Service URLs (for inter-service communication)
API_GATEWAY_URL=http://api-gateway:4000
DOCUMENT_SERVICE_URL=http://document-service:8000
FILE_PROCESSING_URL=http://file-processing-service:8001
COLLABORATION_URL=http://collaboration-service:8002
NOTIFICATION_URL=http://notification-service:8003
