{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "GraphQL API Gateway for Translation Platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint src/",
    "build": "echo 'No build step required for Node.js'",
    "test:connections": "node test-connections.js",
    "test:graphql": "node test-graphql.js",
    "test:all": "npm run test:connections && npm run test:graphql",
    "debug": "DEBUG=* npm run dev",
    "health": "curl -s http://localhost:4000/health | json_pp || echo 'Server not running'"
  },
  "keywords": [
    "graphql",
    "apollo-server",
    "api-gateway",
    "microservice"
  ],
  "author": "Translation Platform Team",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/schema": "^10.0.25",
    "@graphql-tools/utils": "^10.9.1",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.2",
    "connect-pg-simple": "^7.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^3.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.16.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.19.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.11.3",
    "subscriptions-transport-ws": "^0.11.0",
    "uuid": "^11.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
