# API Gateway Environment Variables

# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=translation_platform_dev
DB_USER=postgres
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# External Services (placeholder for future Baidu integration)
# BAIDU_ACCESS_KEY=your-baidu-access-key
# BAIDU_SECRET_KEY=your-baidu-secret-key
# BAIDU_AI_API_KEY=your-baidu-ai-api-key
# BAIDU_BOS_ENDPOINT=your-bos-endpoint

# Google Cloud (if using instead of Baidu)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-storage-bucket

# Logging
LOG_LEVEL=info
LOG_FORMAT=json