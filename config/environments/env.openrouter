# OpenRouter Configuration for SeekHub Translation System
# 用于中国大陆地区访问的OpenRouter配置

# ====================
# OpenRouter API配置
# ====================
# 获取API密钥: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemini-pro
OPENROUTER_FALLBACK_MODEL=google/gemini-flash-1.5
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ====================
# 本地存储配置（百度服务器）
# ====================
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_ROOT=/data/seekhub/storage
PUBLIC_URL_BASE=http://your-baidu-server.com/files

# ====================
# 数据库配置
# ====================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=seekhub_translation
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ====================
# Redis缓存配置
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ====================
# 服务端口配置
# ====================
# Translator服务
TRANSLATOR_PORT=8000
# API Gateway
API_GATEWAY_PORT=4000
# 用户服务
USER_SVC_PORT=4001
# 前端应用
CLIENT_PORT=3000

# ====================
# 应用URL配置
# ====================
APP_URL=http://localhost:3000
API_URL=http://localhost:4000
CLIENT_ORIGIN=http://localhost:3000

# ====================
# JWT认证配置
# ====================
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key_here_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ====================
# 翻译服务配置
# ====================
# 最大重试次数
MAX_RETRIES=3
# 速率限制延迟（秒）
RATE_LIMIT_DELAY=1.0
# 批处理大小
BATCH_SIZE=5
# 最大并发请求数
MAX_CONCURRENT_REQUESTS=30
# 连接池大小
CONNECTION_POOL_SIZE=100

# ====================
# Worker配置
# ====================
MAX_WORKERS=20
WORKER_TIMEOUT=300

# ====================
# 日志配置
# ====================
LOG_LEVEL=info
LOG_FILE=/var/log/seekhub/translation.log

# ====================
# 速率限制
# ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================
# Cookie配置
# ====================
COOKIE_NAME=seekhub-token
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# ====================
# 开发工具（可选）
# ====================
# PgAdmin
PGADMIN_EMAIL=admin@seekhub.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# Redis Commander
REDIS_COMMANDER_PORT=8081

# ====================
# Google Cloud配置（备用）
# ====================
# 如果需要使用Google Cloud服务，取消以下注释
# GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
# FIRESTORE_PROJECT_ID=your-project-id
# FIRESTORE_DATABASE_ID=(default)
# GCS_BUCKET_NAME=your-bucket-name
# PUBSUB_PROJECT_ID=your-project-id
# CHAPTER_TOPIC=chapter-translation-topic
# CHAPTER_SUBSCRIPTION=chapter-translation-subscription
