# Development Environment Configuration
# This file contains default values for development environment

# Node Environment
NODE_ENV=development

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=translation_platform_dev
POSTGRES_PORT=5432

# Service Ports
API_GATEWAY_PORT=4000
USER_SVC_PORT=4001

# Frontend Configuration
CLIENT_ORIGIN=http://localhost:3000

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_PORT=6379
# REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Cookie Configuration
COOKIE_NAME=translation-platform-token

# PgAdmin (Development Tools)
PGADMIN_EMAIL=admin@translation-platform.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# Redis Commander Port
REDIS_COMMANDER_PORT=8081