# MongoDB Configuration for SeekHub Translation Platform
# This replaces Baidu Cloud Object Storage with MongoDB GridFS
# Copy this file to mongodb.env and fill in your actual values

# =============================================================================
# MONGODB GRIDFS CONFIGURATION
# =============================================================================

# MongoDB Connection String (Required)
# For MongoDB Atlas (recommended):
MONGODB_CONNECTION_STRING=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority

# For local MongoDB:
# MONGODB_CONNECTION_STRING=mongodb://localhost:27017

# Database Name
MONGODB_DB_NAME=translation_platform

# GridFS Configuration
GRIDFS_BUCKET_NAME=documents
GRIDFS_CHUNK_SIZE=261120

# Connection Pool Settings
MONGO_MAX_POOL_SIZE=10
MONGO_SERVER_SELECTION_TIMEOUT_MS=5000
MONGO_SOCKET_TIMEOUT_MS=45000

# File Upload Settings
MONGO_MULTIPART_THRESHOLD=16777216

# =============================================================================
# MIGRATION SETTINGS
# =============================================================================

# Enable migration from Baidu Cloud (if needed)
ENABLE_BAIDU_MIGRATION=false

# Baidu Cloud credentials (for migration only)
# BAIDU_ACCESS_KEY=your_baidu_access_key
# BAIDU_SECRET_KEY=your_baidu_secret_key
# BAIDU_BOS_ENDPOINT=bj.bcebos.com
# BAIDU_BOS_BUCKET=your_bucket_name

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Enable MongoDB query logging
MONGO_ENABLE_QUERY_LOGGING=false

# Log slow queries (milliseconds)
MONGO_SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable SSL/TLS for MongoDB connection
MONGO_USE_SSL=true

# Authentication database (usually admin for Atlas)
MONGO_AUTH_SOURCE=admin

# Connection options
MONGO_READ_PREFERENCE=primary
MONGO_WRITE_CONCERN=majority