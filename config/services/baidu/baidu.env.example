# Baidu Cloud Services Configuration Example
# Copy this file to baidu.env and fill in your actual values
#
# This configuration supports the complete file upload pipeline with metadata storage

# =============================================================================
# BAIDU CLOUD AUTHENTICATION
# =============================================================================

# Baidu Cloud Access Credentials
BAIDU_ACCESS_KEY=your_baidu_access_key_here
BAIDU_SECRET_KEY=your_baidu_secret_key_here

# Region endpoint for Baidu Object Storage (BOS)
# Common endpoints:
# - Beijing: bj.bcebos.com
# - Guangzhou: gz.bcebos.com  
# - Shanghai: sh.bcebos.com
# - Hangzhou: hk.bcebos.com
BAIDU_BOS_ENDPOINT=bj.bcebos.com

# =============================================================================
# BAIDU OBJECT STORAGE (BOS) CONFIGURATION
# =============================================================================

# Primary bucket for file storage
BAIDU_BOS_BUCKET=your-translation-files-bucket

# Optional: CDN domain for faster access
BAIDU_CDN_BASE_URL=https://your-cdn-domain.baidubce.com

# Storage class options: STANDARD, STANDARD_IA, COLD, ARCHIVE
BAIDU_BOS_STORAGE_CLASS=STANDARD

# File organization prefix (folder structure in bucket)
BAIDU_BOS_PREFIX=documents/

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size for uploads (in bytes, 500MB default)
BAIDU_MAX_FILE_SIZE=524288000

# Supported file types for upload (comma-separated)
BAIDU_SUPPORTED_FILE_TYPES=pdf,docx,doc,txt,rtf,html,htm,mp3,wav,mp4,avi,mov

# File naming strategy: timestamp, uuid, original, custom
BAIDU_FILE_NAMING_STRATEGY=timestamp

# Enable file encryption at rest
BAIDU_ENCRYPT_FILES=true

# =============================================================================
# MULTIPART UPLOAD CONFIGURATION
# =============================================================================

# Enable multipart upload for large files (>100MB)
BAIDU_ENABLE_MULTIPART=true

# Part size for multipart uploads (in bytes, 100MB default)
BAIDU_MULTIPART_PART_SIZE=104857600

# Maximum number of concurrent parts
BAIDU_MULTIPART_MAX_CONCURRENT_PARTS=5

# =============================================================================
# ACCESS CONTROL AND SECURITY
# =============================================================================

# Default ACL for uploaded files: private, public-read, public-read-write
BAIDU_DEFAULT_ACL=private

# Pre-signed URL expiration time (in seconds, 1 hour default)
BAIDU_PRESIGNED_URL_EXPIRY=3600

# Enable request signature verification
BAIDU_VERIFY_SIGNATURES=true

# IP whitelist for API access (comma-separated, empty for no restriction)
BAIDU_IP_WHITELIST=

# =============================================================================
# FILE PROCESSING AND METADATA
# =============================================================================

# Enable automatic metadata extraction
BAIDU_EXTRACT_METADATA=true

# Enable virus scanning for uploads
BAIDU_ENABLE_VIRUS_SCAN=false

# Enable thumbnail generation for images
BAIDU_GENERATE_THUMBNAILS=true

# Thumbnail sizes (width x height, comma-separated)
BAIDU_THUMBNAIL_SIZES=150x150,300x300,800x600

# =============================================================================
# CACHING AND PERFORMANCE
# =============================================================================

# Enable local cache for metadata
BAIDU_ENABLE_CACHE=true

# Cache TTL in seconds (24 hours default)
BAIDU_CACHE_TTL=86400

# Redis URL for distributed caching (optional)
BAIDU_REDIS_CACHE_URL=redis://localhost:6379/2

# Connection pool settings
BAIDU_CONNECTION_POOL_SIZE=10
BAIDU_CONNECTION_TIMEOUT=30000

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Enable detailed logging for Baidu operations
BAIDU_ENABLE_LOGGING=true

# Log level: error, warn, info, debug, trace
BAIDU_LOG_LEVEL=info

# Enable metrics collection
BAIDU_ENABLE_METRICS=true

# Webhook URL for upload notifications (optional)
BAIDU_WEBHOOK_URL=

# =============================================================================
# BACKUP AND REDUNDANCY
# =============================================================================

# Enable cross-region backup
BAIDU_ENABLE_BACKUP=false

# Backup bucket name (different region recommended)
BAIDU_BACKUP_BUCKET=your-backup-bucket

# Backup region endpoint
BAIDU_BACKUP_ENDPOINT=gz.bcebos.com

# =============================================================================
# GLOSSARY AND TRANSLATION SPECIFIC
# =============================================================================

# Dedicated bucket for glossary files
BAIDU_GLOSSARY_BUCKET=your-glossary-bucket

# Glossary file organization prefix
BAIDU_GLOSSARY_PREFIX=glossaries/

# Enable versioning for glossary files
BAIDU_GLOSSARY_VERSIONING=true

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Use mock service for development (true/false)
BAIDU_USE_MOCK=false

# Test bucket for development
BAIDU_TEST_BUCKET=your-test-bucket

# Enable debug mode
BAIDU_DEBUG_MODE=false